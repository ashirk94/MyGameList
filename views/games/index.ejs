<h2>Search Games</h2>
<form action="/games" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Title</label>
            <input type="text" name="title" value="<%= searchOptions.title %>">
        </div>
    </div>
    <div class="form-row">
        <div class="form-item">
            <label>Released After</label>
            <input type="date" name="releasedAfter" value="<%= searchOptions.releasedAfter %>">
        </div>
        <div class="form-item">
            <label>Released Before</label>
            <input type="date" name="releasedBefore" value="<%= searchOptions.releasedBefore %>">
        </div>
    </div>
    <button class="btn btn-primary" type="submit">Search</button>
</form>
<br>
<div>
    <% games.forEach(game => { %>
        <a href="/games/<%= game.id %>">
            <img height="250" width="200" src="https://s3-us-west-2.amazonaws.com/gamelistapp/<%= game.imageName %>">
        </a>
    <% }) %>
</div>