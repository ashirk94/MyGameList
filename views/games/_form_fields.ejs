<div class="form-row">
    <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= game.title%>">
    </div>
    <div class="form-item">
        <label>Console</label>
        <select name="console">
        <% consoles.forEach(console => { %>
            <% if (console.id === game.console) { %>
                <option selected label="<%= console.name %>" value="<%= console.id %>">
            <% } else { %>
                <option label="<%= console.name %>" value="<%= console.id %>">
            <% } %>
        <% }) %>
        </select>
        </div>
    </div>
<div class="form-row">
    <div class="form-item">
    <label>Release Date</label>
    <input type="date" name="releaseDate"
        value="<%= game.releaseDate == null ? '' : game.releaseDate.toISOString().split('T')[0] %>">
    </div>
    <div class="form-item">
        <label>Genre</label>
        <input type="text" name="genre"
            value="<%= game.genre %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item">
        <label>Notes</label>
        <textarea name="notes"><%= game.notes %></textarea>
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
    <label>Image</label>
    <label class="btn btn-primary">Upload
        <input class="file-input" type="file" name="image">
    </label>
    </div>
</div>