<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= game.title%>">
</div>
<div>
    <label>Console</label>
    <select name="console">
    <% consoles.forEach(console => { %>
        <% if (console.id === game.console) { %>
            <option selected label="<%= console.name %>" value="<%= console.id %>">
        <% } else { %>
            <option label="<%= console.name %>" value="<%= console.id %>">
        <% } %>
    <% }) %>
    </select>
</div>
<div>
    <label>Release Date</label>
    <input type="date" name="releaseDate"
        value="<%= game.releaseDate == null ? '' : game.releaseDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Genre</label>
    <input type="text" name="genre"
        value="<%= game.genre %>">
</div>
<div>
    <label>Image</label>
    <input type="file" name="image">
</div>
<div>
    <label>Notes</label>
    <textarea name="notes"><%= game.notes %></textarea>
</div>